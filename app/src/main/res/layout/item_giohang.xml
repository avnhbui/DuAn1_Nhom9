<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imgsp"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/airnu"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tensp"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giày AF1 Nữ"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_margin="8dp"
            android:id="@+id/giasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="500000 VND"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#F81515"
            />
        <LinearLayout
            android:layout_margin="8dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageButton
                android:id="@+id/btntru"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/searchview"
                android:src="@drawable/dautruu"
                />
            <TextView
                android:id="@+id/soluong"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:background="@drawable/searchview"
                android:paddingTop="2dp"
                android:paddingLeft="12dp"
                android:textSize="25dp"
                />
            <ImageButton
                android:id="@+id/btncong"
                android:background="@drawable/searchview"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/daucongg"
                />
        </LinearLayout>
    </LinearLayout>

        <ImageButton
            android:id="@+id/btnxoa"
            android:layout_gravity="center"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/xoa"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>