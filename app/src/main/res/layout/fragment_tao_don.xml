<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_cus.TaoDon">
    <ImageView
        android:id="@+id/imganh"
        android:layout_width="377dp"
        android:layout_height="277dp"
        android:src="@drawable/nike"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:id="@+id/tvtensp"
        android:layout_marginLeft="32dp"
        android:layout_width="348dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:text="Giày Nike - IA phiên bản thể thao năng động cho nam và nữ "
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     >
        <TextView
            android:id="@+id/tvgiasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600000"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#E82F2F"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#E82F2F"
            android:textStyle="bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tvloaisp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Loại SP"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mô tả sản phẩm: "
        android:layout_marginLeft="32dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <TextView
            android:id="@+id/tvmota"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Mô tả sản phẩm: "
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="@color/black"
            />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thêm vào giỏ hàng"
                android:textAllCaps="false"
                android:textSize="18dp"
                android:id="@+id/themgiohang"
                android:textColor="@color/white"
                android:background="#FF0000"
                android:layout_gravity="bottom|center"
                />
    </FrameLayout>
</LinearLayout>