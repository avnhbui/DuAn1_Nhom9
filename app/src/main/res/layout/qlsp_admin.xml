<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="2dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/qsp_img"
            android:layout_width="150dp"
            android:layout_height="120dp"
        android:src="@drawable/airnu"
            />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/qlsp_idsp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID SP"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            />
        <TextView
            android:id="@+id/qlsp_tensp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/qlsp_giasp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giá"
                android:textColor="#ED2C2C"
                android:textStyle="bold"
                android:textSize="21dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                /><TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VND"
            android:textColor="#ED2C2C"
            android:textStyle="bold"
            android:textSize="21dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            />
        </LinearLayout>
        <TextView
            android:id="@+id/qlsp_loaisp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loại sản phẩm"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="21dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/qlsp_btnxoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/xoa"
                android:layout_gravity="center|end"
                />
            <ImageButton
                android:id="@+id/qlsp_btnsua"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/sua"
                />
        </LinearLayout>
    </LinearLayout>

    </LinearLayout>
        <TextView
            android:id="@+id/qlsp_motasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textSize="18dp"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>