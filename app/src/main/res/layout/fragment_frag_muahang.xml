<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment_cus.frag_muahang">
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/imganhmua"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/giaycovua"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/tvtenspmua"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Giày Nike - IA"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/tvgiaspmua"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="600000"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#E82F2F"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/tvloai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thể loại"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:textColor="#E82F2F"
                android:textStyle="bold"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/spnsize"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/searchview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màu sắc: "

        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/spncolor"
        android:layout_width="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/searchview"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        />




        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:background="#F43D3D"
            android:text="Thêm giỏ hàng"
            android:id="@+id/btngiohang"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18dp" />

</LinearLayout>