<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_marginLeft="15dp"
    android:layout_marginTop="20dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:src="@drawable/giaycovua"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvtensp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Giày Nike"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:id="@+id/tvgiasp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:textColor="#E82F2F"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />

    <Spinner
        android:id="@+id/spnsize"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/searchview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp" />
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Màu sắc: "

        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <Spinner
        android:id="@+id/spncolor"
        android:layout_width="wrap_content"
        android:spinnerMode="dropdown"
        android:background="@drawable/searchview"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"

        />
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <LinearLayout
        android:background="@drawable/searchview"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageButton
            android:id="@+id/btntru"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/searchview"
            android:src="@drawable/dautruu"
            />
        <TextView
            android:id="@+id/soluong"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="0"
            android:paddingTop="2dp"
            android:paddingLeft="12dp"
            android:textSize="25dp"
            />
        <ImageButton
            android:id="@+id/btncong"
            android:background="@drawable/searchview"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/daucongg"
            />
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin nhận hàng: "
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <EditText
        android:id="@+id/txturl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Họ và tên"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/txtid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="SDT"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp"/>
    <EditText
        android:id="@+id/txtten"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="5dp"
        android:padding="10dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="#F43D3D"
        android:text="Đặt hàng"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="18dp" />
</LinearLayout>